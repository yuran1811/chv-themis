<header class="p-3 bg-dark text-white tw-sticky tw-top-0 tw-left-0 tw-right-0 tw-z-50">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-sm-start">
      <a href="/" class="d-flex align-items-center mb-2 mb-sm-0 px-4 text-white text-decoration-none">
        <img src="/img/logo_100x100.png" alt="Logo" width="50" height="50" />
      </a>

      <ul class="nav col-12 col-sm-auto me-sm-auto mb-2 justify-content-center mb-md-0">
        <li>
          <a
            href="/"
            class="nav-link px-2 text-<% if (navStatus == 'home') { %>white fw-bold<% } else { %>secondary<% } %>"
          >
            Home
          </a>
        </li>
        <li>
          <a
            href="/about"
            class="nav-link px-2 text-<% if (navStatus == 'about') { %>white fw-bold<% } else { %>secondary<% } %>"
          >
            About
          </a>
        </li>
        <li>
          <a
            href="/ranking"
            class="nav-link px-2 text-<% if (navStatus == 'ranking') { %>white fw-bold<% } else { %>secondary<% } %>"
          >
            Ranking
          </a>
        </li>
        <li>
          <a
            href="/problems/list"
            class="nav-link px-2 text-<% if (navStatus == 'problems') { %>white fw-bold<% } else { %>secondary<% } %>"
          >
            Problems
          </a>
        </li>
      </ul>

      <% if (isAuth == "0") { %>
      <div class="sign-in-container text-end">
        <label for="sign-in-inp" class="sign-in-btn">Sign In</label>
        <input id="sign-in-inp" type="checkbox" class="btn me-2" />
        <%- include('./sign-in') %>
      </div>
      <% } else { %>
      <%- include('./submit') %>
      <script src="/js/signOutHandle.js"></script>
      <% }
			%>
    </div>
  </div>
</header>
